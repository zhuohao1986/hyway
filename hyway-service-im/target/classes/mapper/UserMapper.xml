<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.way.dao.UserMapper">
  <resultMap id="BaseResultMap" type="com.way.common.pojos.im.User">
    <!--
      WARNING - @mbg.generated
    -->
    <result column="id" jdbcType="INTEGER" property="id" />
    <result column="account" jdbcType="VARCHAR" property="account" />
    <result column="gender" jdbcType="TINYINT" property="gender" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="location" jdbcType="VARCHAR" property="location" />
    <result column="birthday" jdbcType="DATE" property="birthday" />
    <result column="isOnline" jdbcType="TINYINT" property="isonline" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="photo" jdbcType="LONGVARBINARY" property="photo" />
  </resultMap>
  <select id="selectMaxId" resultType="int">
    select MAX(id) as ID from user
  </select>
  <select id="selectAccountAndPwd" resultMap="BaseResultMap" parameterType="map">
  	select * from user where account=#{account} and password=#{password}
  </select>
  <select id="selectFriendByMix" resultMap="BaseResultMap" parameterType="map">
  select * 	from user 
				where ((YEAR(CURDATE())-YEAR(birthday))-(RIGHT(CURDATE(),5)<![CDATA[<]]>RIGHT(birthday,5)))
				between #{start} and #{end} 
  </select>
  <select id="getUser" resultMap="BaseResultMap" parameterType="int">
  select u.* from friendlist as f left outer join user as u
				      on f.friendid=u.id 
				      where master=#{id}
  </select>
</mapper>